{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["./tsconfig.json", ".babelrc"],
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": 1,
        "quotes": [ 1, "double" ],
        "eqeqeq": 2,
        "no-alert": 2,
        "default-case": 2,
        "vars-on-top": 1,
        "no-tabs": 2,
        "arrow-body-style": 2,
        "no-duplicate-imports": 2,
        "no-var": 2,
        "prefer-const": 2,
        "comma-spacing": 2,
        "array-bracket-spacing": 2,
        "block-spacing": 2,
        "object-curly-spacing": 2,
        "rest-spread-spacing" : [ 2, "never" ],
        "no-console": 1,
        "indent": [ 2, 2 ],
        "space-before-blocks": 2,
        "keyword-spacing": 2,
        "space-infix-ops": 2,
        "eol-last": 2,
//        "newline-per-chained-call": 1,
        "no-whitespace-before-property": 1,
        "padded-blocks": [2, "never"],
        "no-multiple-empty-lines": 1,
        "space-in-parens": 2,
        "max-len": [2, { "code":  100, "ignoreComments": true, "ignoreStrings": true }],
        "computed-property-spacing": 2,
        "func-call-spacing": 2,
        "key-spacing": 2,
        "no-trailing-spaces": 2,
        "comma-dangle": 2,
        "no-new-wrappers": 2,
        "radix": 2,
        "id-length": [2, { "min": 2 }],
//        "camelcase": [2, { "properties": "never", "ignoreDestructuring": true }],

        "array-bracket-newline": 1
    }
}
